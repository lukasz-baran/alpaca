<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox VBox.vgrow="NEVER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.evolve.gui.documents.DocumentsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox id="personMenu" alignment="BASELINE_LEFT" prefHeight="18.0" spacing="5.0">
        <Button fx:id="btnAddDocument" onAction="#addDocumentButtonClicked" text="Dodaj dokument"/>
        <padding>
            <Insets bottom="5.0" />
        </padding>
    </HBox>

    <TableView fx:id="documentsTable" layoutX="10.0" layoutY="10.0"
               maxWidth="1000.0" prefHeight="363.0" prefWidth="279.0"
               AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
        <columns>
            <TableColumn fx:id="idColumn" editable="false" minWidth="45"
                         maxWidth="50.0" text="ID"/>
            <TableColumn fx:id="fileNameColumn" editable="false"
                         minWidth="100" text="Nazwa pliku"/>
            <TableColumn fx:id="dateAddedColumn" editable="false"
                         minWidth="120" text="Data dodania"/>
            <TableColumn fx:id="summaryColumn" editable="false"
                         minWidth="120" text="Opis"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>