<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox VBox.vgrow="NEVER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@../../../../../styles/style.css"
      fx:controller="com.evolve.gui.person.accounts.PersonAccountsController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TableView fx:id="accountsTable" layoutX="22.0" layoutY="19.0" prefHeight="520.0" prefWidth="300.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
            <TableColumn fx:id="accountIdColumn" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" resizable="false" text="ID" />
            <TableColumn fx:id="accountTypeColumn" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" resizable="false" text="Typ" />
            <TableColumn fx:id="unitNumberColumn" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" resizable="false" text="Jednostka" />
            <TableColumn fx:id="accountNameColumn" prefWidth="220.0" text="Nazwa konta" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

    </TableView>
    <padding>
        <Insets bottom="5.0" top="5.0" />
    </padding>
</VBox>

