<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.evolve.gui.PersonDetailsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <GridPane layoutX="75.0" layoutY="63.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="93.0" minWidth="80.0" prefWidth="67.0"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="320.0" minWidth="100.0" prefWidth="320.0"/>
<!--
            <ColumnConstraints hgrow="ALWAYS" maxWidth="320.0" minWidth="10.0" prefWidth="320.0"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="320.0" minWidth="10.0" prefWidth="320.0"/>
-->
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID"/>
            <TextField fx:id="idTextField" editable="false" GridPane.columnIndex="1"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Imię" GridPane.rowIndex="1"/>
            <TextField fx:id="firstNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nazwisko" GridPane.rowIndex="2"/>
            <TextField fx:id="lastNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Drugie imię" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="secondNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Płeć" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <HBox alignment="CENTER_LEFT" prefWidth="255.0" spacing="15.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="4">
                <VBox.margin>
                    <Insets left="25.0" right="25.0"/>
                </VBox.margin>
                <RadioButton fx:id="maleRadioButton" disable="true" selected="true" text="Mężczyzna">
                    <toggleGroup>
                        <ToggleGroup fx:id="genderToggleGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="femaleRadioButton" disable="true" text="Kobieta" toggleGroup="$genderToggleGroup">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </RadioButton>
            </HBox>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data urodzenia" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <!-- prefHeight="30.0" -->
            <DatePicker fx:id="dobPicker" editable="false"  prefWidth="245.0"
                        promptText="Data urodzenia" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <VBox.margin>
                    <Insets left="25.0"/>
                </VBox.margin>
            </DatePicker>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Kartoteka" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="registryNumberTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stara kartoteka" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextField fx:id="oldRegistryNumberTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" wrappingWidth="102.625"
                  GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <TextField fx:id="emailTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

<!--            <Button fx:id="addButton" mnemonicParsing="false" text="Add" GridPane.rowIndex="3"/>-->

        </children>
    </GridPane>
</AnchorPane>
