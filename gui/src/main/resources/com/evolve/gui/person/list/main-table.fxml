<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="personTableAnchorPane"
        minHeight="0.0" minWidth="100.0" prefHeight="160.0"
            prefWidth="100.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evolve.gui.person.list.MainTableController">
    <children>
        <TableView fx:id="personTable" layoutX="10.0" layoutY="10.0"
                   maxWidth="1000.0" prefHeight="363.0" prefWidth="279.0"
                   AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
            <columns>
                <TableColumn fx:id="idColumn" editable="false" minWidth="45"
                             maxWidth="50.0" text="ID"/>
                <TableColumn fx:id="firstNameColumn" editable="false"
                             minWidth="100" text="ImiÄ™"/>
                <TableColumn fx:id="lastNameColumn" editable="false"
                             minWidth="120" text="Nazwisko"/>
                <TableColumn fx:id="dobColumn" editable="false" minWidth="75"
                             maxWidth="75" text="Data ur."/>
                <TableColumn fx:id="statusColumn" editable="false" minWidth="50"
                             text="Status"/>
                <TableColumn fx:id="registryNumberColumn" editable="false" minWidth="50"
                             text="Kartoteka"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox id="HBox" alignment="TOP_CENTER" prefHeight="18.0"
              prefWidth="640.0" spacing="5.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
            <Label text="Filter Table:" textAlignment="RIGHT"/>
            <TextField fx:id="filterField" alignment="TOP_LEFT"
                       prefHeight="15.0" prefWidth="78.0"
                       HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnClearFilter" text="Clear"/>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
